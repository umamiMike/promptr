<html>
    <head>
        <meta charset="utf-8">
        <title>Promptr</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    </head>
    <body>
        {% if admin == true %}
        <div class="container">
            <h2>Create questions for your promptr</h2>

            <label for="promptr_name">Enter the name for your Promptr:</label>
            <input id="promptr_name" name="promptr_name" type="text">
            <button type="submit" class="btn-md">Enter</button>


                    {% for question in questions %}
                        <form action="/admin_start" method="post">
                            <div class="form-group">
                                <label for="question">Add Question</label>
                                <input class="form-control" id="question" name="question" type="text" required autofocus>
                                <br>
                            </div>
                            <button type="submit" class="btn-md">Add Question/Answer</button>
                        </form>
                    {% endfor %}

                <div>
                <textarea placeholder="This is an awesome comment box" rows="20" name="answer"
                id="comment_text" cols="40" class="ui-autocomplete-input" autocomplete="off"
                role="textbox" aria-autocomplete="list" aria-haspopup="true" required></textarea>
                
                <input class="form-control" id="answer" name="answer" value="">
                </div>
                <button type="submit" class="btn-md">Add Question/Answer</button>

        {% endif %}
    </body>
</html>
